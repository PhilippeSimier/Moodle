<!-- question: 1305  -->
  <question type="multichoice">
    <name>
      <text>droits pour user</text>
    </name>
    <questiontext format="html">
      <text><![CDATA[<p>Quelle commande est utilisée pour attribuer le droit de<b> lecture-écriture</b>&nbsp; au propriétaire du fichier?</p>]]></text>
    </questiontext>
    <generalfeedback format="html">
      <text></text>
    </generalfeedback>
    <defaultgrade>1.0000000</defaultgrade>
    <penalty>0.3333333</penalty>
    <hidden>0</hidden>
    <idnumber></idnumber>
    <single>true</single>
    <shuffleanswers>true</shuffleanswers>
    <answernumbering>abc</answernumbering>
    <correctfeedback format="html">
      <text>Votre réponse est correcte.</text>
    </correctfeedback>
    <partiallycorrectfeedback format="html">
      <text>Votre réponse est partiellement correcte.</text>
    </partiallycorrectfeedback>
    <incorrectfeedback format="html">
      <text>Votre réponse est incorrecte.</text>
    </incorrectfeedback>
    <shownumcorrect/>
    <answer fraction="0" format="html">
      <text><![CDATA[<h5>chmod a+r file</h5>]]></text>
      <feedback format="html">
        <text><![CDATA[<p>l'option <b>a+r</b> donne le droit de lecture à tout le monde&nbsp;</p>]]></text>
      </feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<h5>chmod o+r file</h5>]]></text>
      <feedback format="html">
        <text><![CDATA[<p>l'option <b>o+r </b>donne le droit de lecture aux autres <b>o</b> = <b>other</b></p>]]></text>
      </feedback>
    </answer>
    <answer fraction="100" format="html">
      <text><![CDATA[<h5>chmod u=rw file</h5>]]></text>
      <feedback format="html">
        <text></text>
      </feedback>
    </answer>
    <answer fraction="0" format="html">
      <text><![CDATA[<h5>chmod og-r file</h5>]]></text>
      <feedback format="html">
        <text><![CDATA[<p>l'option og-r retire le droit de lecture pour o other (les autres) et g group (le groupe)</p>]]></text>
      </feedback>
    </answer>
  </question>

